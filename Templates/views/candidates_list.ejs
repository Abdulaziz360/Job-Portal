<%- include('partials/headerlinks.ejs')%>
<%- include('partials/header.ejs')%>
    <!-- CONTENT START -->
    <div class="page-content">

        <!-- INNER PAGE BANNER -->
        <div class="wt-bnr-inr overlay-wraper bg-center" style="background-image:url(../../app_assets/images/banner/1.jpg);">
            <div class="overlay-main site-bg-white opacity-01"></div>
            <div class="container">
                <div class="wt-bnr-inr-entry">
                    <div class="banner-title-outer">
                        <div class="banner-title-name">
                            <h2 class="wt-title">Candidates List</h2>
                        </div>
                    </div>
                    <!-- BREADCRUMB ROW -->

                    <div>
                        <ul class="wt-breadcrumb breadcrumb-style-2">
                            <li><a href="/">Home</a></li>
                            <li>Candidates List</li>
                        </ul>
                    </div>

                    <!-- BREADCRUMB ROW END -->
                </div>
            </div>
        </div>
        <!-- INNER PAGE BANNER END -->

        <!-- OUR BLOG START -->
        <div class="section-full p-t120  p-b90 site-bg-white">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="twm-candidates-grid-wrap">
                            <div class="row">
                                   <%if(candidate) {%>                                    
                                    <% if (candidate.length > 0) { %>
                                        <% for (let i=0; i< candidate.length;i++)
                                        { %>
                                            
                                            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                                <div class="twm-candidates-grid-style1 mb-5">
                                                    <div class="twm-media">
                                                        <div class="twm-media-pic">
                                                            <img src="db_assets/p-images/<%=candidate[i].profile_photo%>" alt="#">
                                                        </div>
                                                        <div class="twm-candidates-tag"><span>Candidate</span></div>
                                                    </div>
                                                    <div class="twm-mid-content">
                                                        <a href="/candidate-profile/<%= candidate[i]._id %>" class="twm-job-title">
                                                            <h4><%=candidate[i].fname %> <%=candidate[i].lname%></h4>
                                                        </a>
                                                        <% if (candidate[i].resumeProfile && candidate[i].resumeProfile.resume) { %>
                                                        <p><%=candidate[i].resumeProfile.resume_title%></p>
                                                        <p><%=candidate[i].resumeProfile.resume%></p>
                                                        <%} else { %>
                                                            <p>No resume available</p>
                                                            <p>Please upload your resume</p>
                                                        <% } %>
                                                        <a href="/candidate-profile/<%= candidate[i]._id %>" class="twm-view-prifile site-text-primary">View Profile</a>

                                                        <div class="twm-fot-content">
                                                            <div class="twm-left-info">
                                                                <p class="twm-candidate-address"><i class="feather-map-pin"></i>
                                                                    <%=candidate[i]. full_address%>
                                                                </p>
                                                            </div>
                                                         </div> 
                                                    </div>
                                                </div>
                                            </div>
                                            
                                       <%}%> 
                                <% } %>  
                            <%} %>
                            <%if(!candidate){%>
                                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                        <div class="twm-candidates-grid-style1 mb-5">
                                            <h4>No candidates found</h4>
                                        </div>
                                    </div>
                            <%}%>   
                            </div>
                        </div>
                        <div class="d-flex justify-content-start">
                        
                            <%if (currentpage > 1){%>
                               <a href="?page=<%=prev%>">Pre..</a>
                            <%}%> 
                            <%if (totalpages > 1){%>
                                <%for(let i=0;i< pages.length;i++){%>
                                  <a href="?page=<%=this[i]%>"> <%=this[i]%></a> 
                                  <%}%>
                            <%}%>
  
                             <a href="?page=<%=next%>">nextpage</a>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <!-- OUR BLOG END -->

    </div>
    <!-- CONTENT END -->
    <%- include('partials/footer.ejs') %>
<%- include('partials/footer_script.ejs') %>
