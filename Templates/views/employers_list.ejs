<%- include('partials/headerlinks.ejs')%>
<%- include('partials/header.ejs')%>
    <!-- CONTENT START -->
    <div class="page-content">

        <!-- INNER PAGE BANNER -->
        <div class="wt-bnr-inr overlay-wraper bg-center" style="background-image:url(../../app_assets/images/banner/1.jpg);">
            <div class="overlay-main site-bg-white opacity-01"></div>
            <div class="container">
                <div class="wt-bnr-inr-entry">
                    <div class="banner-title-outer">
                        <div class="banner-title-name">
                            <h2 class="wt-title">Employers List</h2>
                        </div>
                    </div>
                    <!-- BREADCRUMB ROW -->

                    <div>
                        <ul class="wt-breadcrumb breadcrumb-style-2">
                            <li><a href="/">Home</a></li>
                            <li>Employers List</li>
                        </ul>
                    </div>

                    <!-- BREADCRUMB ROW END -->
                </div>
            </div>
        </div>
        <!-- INNER PAGE BANNER END -->


        <!-- Employer Grid START -->
        <div class="section-full p-t120  p-b90 site-bg-white">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12 col-md-12 col-sm-12">

                        <div class="twm-employer-list-wrap">
                            <div class="row">

                                <%if(employer){%>
                                    <% for(let i=0;i< employer.length;i++){%>
                                            <div class="col-lg-4 col-md-6 col-sm-12">
                                                <div class="twm-employer-grid-style1 mb-5">
                                                    <div class="twm-media">
                                                        <img src="/db_assets/p-images/<%=employer[i].profile_photo%>" alt="#">
                                                    </div>
                                                    <div class="twm-mid-content">
                                                        <a href="/employer-profile/<%=i+1%>" class="twm-job-title">
                                                            <h4 style="font-weight: 700;"><%=employer[i].fname%> <%=employer[i].lname%></h4>
                                                        </a>
                                                        <p class="twm-job-address"><%=employer[i].full_address%></p>
                                                        <a href="/employer-profile/<%=i+1%>" class="twm-job-websites site-text-primary">Manager</a>
                                                    </div>
                                                    <div class="twm-right-content">
                                                        <div class="twm-jobs-vacancies"><span><%=employer[i].zip_code%></span>Zip Code</div>
                                                    </div>
                                                </div>
                                            </div>
                                       <%}%>
                                    <%}else{%>
                                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                            <div class="twm-candidates-grid-style1 mb-5">
                                                <h4>No employers found</h4>
                                            </div>
                                        </div>
                                    <%}%>

                            </div>
                        </div>

                                <div class="d-flex justify-content-start">
                                    {!! $employers->withQueryString()->links('pagination::bootstrap-4') !!}
                                </div>

                    </div>

                </div>
            </div>
        </div>
        <!-- Employer Grid END -->



    </div>
    <!-- CONTENT END -->

    <%- include('partials/footer.ejs')%>
    <%- include('partials/footer_script.ejs')%>
