<%- include('../partials/main_header') %>
<%- include('../partials/navebar_header') %>
<%- include('../partials/side_bar') %>
    <style>
        .card {
            height: auto !important;
        }
    </style>

    <!--**********************************
            Content body start
        ***********************************-->
    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">
            <div class="d-flex align-items-center mb-4 flex-wrap">
                <h4 class="fs-20 font-w600  me-auto">Job View</h4>
                <div>
                    <a href="/employers/job-create" class="btn btn-primary me-3 btn-sm">Add New</a>
                    <a href="/employers/jobs-list" class="btn btn-secondary btn-sm me-3">List </a>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-3 col-xxl-4">
                    <div class="row">
                        <div class="col-xl-12">

                            <div class="card">
                                <div class="card-header border-0 pb-0">
                                    <h4 class="fs-20 mb-0">Job Featured Image </h4>
                                </div>
                                <div class="card-body">
                                    <img class="rounded-circle img-fluid" src="/db_assets/p-images/<%=jobImage%>">
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header border-0 pb-0">
                                    <h4 class="fs-20 mb-0">Overview</h4>
                                </div>
                                <div class="card-body pt-4">
                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">Job Title:</h5>
                                        <span><%=jobTitle%></span>
                                    </div>
                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">Experience:</h5>
                                        <span><%=Experience%></span>
                                    </div>
                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">Vacancy:</h5>
                                        <span><%=Vacancies%></span>
                                    </div>

                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">State & City:</h5>
                                        <span><%=State%> ,<%=City%></span>
                                    </div>


                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">Address:</h5>
                                        <span><%=Address%></span>
                                    </div>

                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">Job Type:</h5>
                                        <span><%=jobType%></span>
                                    </div>
                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">Posted Date:</h5>
                                        <%
                                         let Pdate=new Date(Post_date);
                                         let date_options={ day: '2-digit' , month:  'short', year: 'numeric' };
                                         let Pformat=Pdate.toLocaleDateString('en',date_options).split(' ');
                                         let P_date=`${Pformat[1]} ${Pformat[0]}, ${Pformat[2]}`;
                                        %>
                                        <span><%=P_date%></span>
                                    </div>
                                    <div class="mb-3 d-flex">
                                        <h5 class="mb-1 fs-14 custom-label">Closed Date:</h5>
                                        <%
                                         let date=new Date(Cdate);
                                         let options={ day: '2-digit' , month:  'short', year: 'numeric' };
                                         let format=date.toLocaleDateString('en',options).split(' ');
                                         let c_date=`${format[1]} ${format[0]}, ${format[2]}`;
                                        %>
                                       
                                        <span><%=c_date%></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-xl-9 col-xxl-8">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-header d-block">
                                    <h4 class="fs-20 d-block"><a href="javascript:void(0);"><%=jobTitle%></a></h4>
                                    <div class="d-block">
                                        <!-- @php
                                         $c_id = $job->comp_id;
                                         $company = DB::table('companies')->where([['emp_id', '=', Auth::user()->id],['id', '=', $c_id]])->first();
                                        @endphp -->
                                        <span class="me-2"><a href="javascript:void(0);" title="Company Name"><i class="fas fa-briefcase me-2"></i><%=Company%></a></span>
                                        <span class="me-2"><a href="javascript:void(0);" title="Company Address"><i class="fas fa-map-marker-alt me-2"></i><%=Comp_Address%></a></span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <h4 class="fs-20 mb-3">Description</h4>
                                    <div class="ms-4">
                                        <p><%=S_Description%></p>
                                    </div>
                                    <hr>

                                    <h4 class="fs-20 mb-3">Requirements & More Description</h4>
                                    <div class="ms-4">
                                        <p><%=Description.replace(/<\/?p>/g, '')%></p>
                                    </div>
                                    <hr>

                                    <h4 class="fs-20 mb-3">Job Details</h4>
                                    <div class="row mb-3">
                                        <div class="col-xl-6">
                                            <div class="ms-4">
                                                <p class="font-w500 mb-3"><span class="custom-label">Job Title :</span><span class="font-w400"> <%=jobTitle%></span></p>
                                                <p class="font-w500 mb-3"><span class="custom-label">Job Category:</span><span class="font-w400"><%=Category%></span></p>
                                                <p class="font-w500 mb-3"><span class="custom-label">Min Salary:</span><span class="font-w400"> <%=MinSalary%></span></p>
                                                <p class="font-w500 mb-3"><span class="custom-label">Max Salary:</span><span class="font-w400"> <%=MaxSalary%></span></p>
                                                <p class="font-w500 mb-3"><span class="custom-label">Job Tags:</span><span class="font-w400"> <%=jobTags%></span></p>
                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="ms-4">
                                                <p class="font-w500 mb-3"><span class="custom-label">Job Experience:</span><span class="font-w400"><%=Experience%> +</span></p>
                                                <p class="font-w500 mb-3"><span class="custom-label">Job For:</span><span class="font-w400"> <%=Gender%></span></p>
                                                <p class="font-w500 mb-3"><span class="custom-label">Eligibility:</span><span class="font-w400"><%=Eligibility%></span></p>
                                                <p class="font-w500 mb-3"><span class="custom-label">Company :</span><span class="font-w400"> <%=Company%></span></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    <!--**********************************
        Content body end
    ***********************************-->

