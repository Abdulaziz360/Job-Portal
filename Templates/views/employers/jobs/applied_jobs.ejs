<%- include('../partials/main_header') %>
<%- include('../partials/navebar_header') %>
<%- include('../partials/side_bar') %>
    <style>
        .dropup, .dropend, .dropdown, .dropstart {
            position: relative;
            display: inline-flex;
        }
        li {
            font-weight: 600;
            list-style: none;
            color: red;
        }
        td {
            font-size: 12px !important;
        }
        th {
            font-size: 14px !important;
            font-weight: 800 !important;
        }
    </style>
    <div class="content-body" style="min-height: 788px;">
        <!-- row -->
        <div class="container-fluid">
            <div class="d-flex align-items-center mb-4 flex-wrap">
                <h4 class="fs-20 font-w600  me-auto">Applied Jobs List</h4>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <%if(applied_jobs==''){%>
                        <div class="row p-2 m-auto">
                            <div class="alert alert-secondary alert-alt solid fade show" role="alert">
                                <h4 class="text-light fw-bold">Result Not Found</h4>
                            </div>
                        </div>
                    <%}%>

                    <%if(applied_jobs!=''){%>
                        <div class="table-responsive">
                            <div>
                                <table class="table display mb-5 dataTablesCard job-table table-responsive-xl card-table dataTable no-footer">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0"  style="width: 23.8594px;">No</th>
                                        <th class="sorting"   style="width: 189.812px;">Title</th>
                                        <th class="sorting"   style="width: 50.7344px;">Image</th>
                                        <th class="sorting"   style="width: 50.7344px;">Category</th>
                                        <th class="sorting"   style="width: 50.7344px;">Company</th>
                                        <th class="sorting"   style="width: 93.9219px;">Job Type</th>
                                        <th class="sorting"   style="width: 64.5938px;">Status</th>
                                        <th class="sorting"    style="width: 152.766px;">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        
                                    <%for(let i=0;i< applied_jobs.length;i++){%>
                                       
                                        <tr role="row" class="odd">
                                            <td class="sorting_1"><%=i+1%></td>
                                            
                                            <td><%=applied_jobs[i].job_name%></td>
                                            
                                            <td class="wspace-no"><img style="height: 30px; width: auto;" class="rounded-circle img-fluid" src="/db_assets/p-images/<%=applied_jobs[i].job_image%>" alt="" width="100"></td>
                                 
                                                <td><%=applied_jobs[i].category_name%></td>
                                   
                                                    <td><%=applied_jobs[i].comp_name%></td>
                                            
                                            

                                                    <td><%=applied_jobs[i].job_type%></td>
                                           

                                            <% let status = '' %>
                                            <% let bg = '' %>
                                            <% if (applied_jobs[i].status == 1) { %>
                                                <% status = 'Accepted' %>
                                                <% bg = 'success' %>
                                            <% } else if (applied_jobs[i].status == 0) { %>
                                                <% status = 'Pending' %>
                                                <% bg = 'danger' %>
                                            <% } else if (applied_jobs[i].status == 3) { %>
                                                <% status = 'Rejected' %>
                                                <% bg = 'danger' %>
                                            <% }  else if (applied_jobs[i].status == 2) { %>
                                                <% status = 'Hired' %>
                                                <% bg = 'success' %>
                                            <% } %>
                                              <td>  <span class="badge badge-<%=bg%> badge-lg light"><%=status%></span> </td>
                                              <td>
                                                <div class="dropdown">
                                                    <a title="View Applicants" href="/employers/job-applicants?id=<%=applied_jobs[i].job_id%>" class="btn btn-warning light mr-2">
                                                        <i class="fas fa-briefcase"></i> 
                                                    </a> 
                                                    <a href="/employers/job-detail/<%=applied_jobs[i].job_id%>/<%=i+1%>" class="btn btn-success light mr-2">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="svg-main-icon" width="24px" height="24px" viewBox="0 0 32 32" x="0px" y="0px"><g data-name="Layer 21"><path d="M29,14.47A15,15,0,0,0,3,14.47a3.07,3.07,0,0,0,0,3.06,15,15,0,0,0,26,0A3.07,3.07,0,0,0,29,14.47ZM16,21a5,5,0,1,1,5-5A5,5,0,0,1,16,21Z" fill="#000000" fill-rule="nonzero"></path><circle cx="16" cy="16" r="3" fill="#000000" fill-rule="nonzero"></circle></g></svg>
                                                    </a>
                                                </div>
                                             </td>

                                            
                                        </tr>
                                    <%}%>

                                    <div class="d-flex justify-content-start">
                                        <!-- {!! $applied_Jobs->withQueryString()->links('pagination::bootstrap-4') !!} -->
                                    </div>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    <%}%>


                </div>
            </div>
        </div>
<%- include('../partials/footer') %>



