<%- include('../partials/main_header') %>
<%- include('../partials/navebar_header') %>
<%- include('../partials/side_bar') %>
    <!--**********************************
            Content body start
        ***********************************-->
    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">

            <div class="row">
                <div class="d-flex align-items-center mb-1">
                    <h4 class="fs-20 font-w600 mb-0 me-auto">User Profile</h4>
                </div>
                <div class="col-xl-10 offset-lg-2 offset-2 m-auto p-5">
                    <div class="card">
                        <div class="card-header border-0 flex-wrap align-items-start">
                            <div class="col-xl-10">
                                <div class="user d-sm-flex d-block pe-md-5 pe-0">

                                
                                   <%if(user.profile_photo){%>
                                        <img src="/db_assets/p-images/<%=user.profile_photo%>">
                                    <%}%> 
                                    <% if(!user.profile_photo) { %>
                                        <img src="/db_assets/images/user.jpg" alt="">
                                    <%}%>
                                    <!-- <div class="ms-sm-3 ms-0 me-md-5 md-0">
                                        <h5 class="mb-1 font-w600"><a href="javascript:void(0);">first name last name</a></h5> -->
                                        <!-- <div class="listline-wrapper mb-2"> -->
                                            <!-- <span class="item"><i class="far fa-envelope"></i>Candidate</span> -
                                            <span class="item"><i class="far fa-id-badge"></i>Candidate</span>
                                        </div>
                                    </div> -->
                                </div>
                                <span class="item" style="color: blue;">Candidate</span>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <h4 class="fs-20">Personal Information:</h4>
                            <div class="row">
                                <div class="col-xl-6 col-md-6">
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Full Name : </span><span class="font-w400"> <%=user.fname %><%= user.lname%></span></p>
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Address :</span><span class="font-w400"><%= user.full_address%> </span></p>
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">DOB : </span><span class="font-w400"><%= user.dob%></span></p>
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Qualification: </span><span class="font-w400"><%= user.qualification %></span></p>
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Bio: </span><span class="font-w400"><%= user.introduction%></span></p>
                                </div>
                                <div class="col-xl-6 col-md-6">
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Email :</span> <span class="font-w400"> <%= user.email %></span></p>
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Phone : </span><span class="font-w400"> <%= user.phone %></span></p>
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Gender : </span><span class="font-w400"> <%= user.gender %></span></p>
                                    <p class="font-w600 mb-2 d-flex"><span class="custom-label-2">Zip code: </span><span class="font-w400"><%= user.zip_code %></span></p>
                                    
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>   
    <!--**********************************
        Content body end
    ***********************************-->
